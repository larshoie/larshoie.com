doctype html
html
  block variables
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title Lars Høie — #{Title} 
    include includes/meta.jade
    include includes/assets.jade
    include includes/mixins.jade
  body
    #main.container
      .content(class="#{Title}")
        header
          ul.logo
            li
              a(href='/') Lars Høie
            li
              a(href='#') Call +47 924 44 762 for a good time
          nav.main(role='navigation')
            ul
              li
                a.projects-link(href='/') Projects
              li
                a(href='#') Blog
          nav.projects.hidden
            ul.projects-container
              li.projects-inner
                include includes/list_of_projects.jade
        .col2
          header.title
            h2 #{Title}
          p
            block project_info
          block project_meta
          .meta
            h3 Brief
            p
              block brief
            h3 Context
            p
              block context
          //-ul.other-projects  
            //-li.prev
              //-block prev
            //-li.next
              //-block next
        ul.images
          block project
        .col1
          include includes/about.jade
          block column_one
        //-.hidethatshit //trenger den ikke hvis 40% bilder
        
    include includes/footer.jade
