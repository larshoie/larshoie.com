doctype html
html
  block variables
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title Lars Høie — #{Title} 
    include includes/meta.jade
    include includes/assets.jade
    include includes/mixins.jade
  body
    #main.container
      .content(class="#{slug}")
        header
          ul.logo
            li
              a(href='/') Lars Høie
            li
              a(href='#') Call +47 924 44 762 for a good time
          nav.main(role='navigation')
            ul
              li
                a.projects-link(href='/projects') Projects
              li
                a(href='process.larshoie.com') Process
          nav.projects.hidden
            ul.projects-container
              li.projects-inner
                include includes/list_of_projects.jade
        .col2
          header.title
            h2 #{Title}
          p.project-info
            block project_info
          block project_meta
          
          ul.more-info
            li
              ul.brief
                block brief
            li
              ul.context
                block context
                    
          //-ul.other-projects  
            //-li.prev
              //-block prev
            //-li.next
              //-block next
        ul.images
          block project
        .mobil-nav
          include includes/list_of_projects.jade
        .col1.hide-m
          include includes/about.jade
          block column_one
        //-.hidethatshit //trenger den ikke hvis 40% bilder
        
    include includes/footer.jade
