doctype html
html
  block variables
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    title Lars Høie — #{Title} 
    include includes/meta.jade
    include includes/assets.jade
    include includes/mixins.jade
  body
    #main.container
      .content
        header
          ul.logo
            li
              a(href='/') Lars Høie
            li
              a(href='#') Call +47 924 44 762 for a good time
          nav.main(role='navigation')
            ul
              li
                a.projects-link-home(href='/projects') Projects
              li
                a(href='process.larshoie.com') Process
          nav.projects
            ul.projects-container-home
              li.projects-inner-home
                include includes/list_of_projects.jade
        .col2
          block column_two
